<Window x:Class="PCCHAT.Talk"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PCCHAT"
        mc:Ignorable="d"
        Title="Talk" Height="1000" Width="600" Closed="Window_Closed">
    <Grid Margin="0,0,-342,-210">
        <RichTextBox x:Name="richTextBox" HorizontalAlignment="Left" Height="261" Margin="10,621,0,0" VerticalAlignment="Top" Width="563">
            <FlowDocument>
                <Paragraph>
                    <Run Text="RichTextBox"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <Button x:Name="btnSend" Content="发送" HorizontalAlignment="Left" Margin="316,919,0,0" VerticalAlignment="Top" Width="75"/>
        <StackPanel x:Name="pnlTalkShow" HorizontalAlignment="Left" Height="539" Margin="10,10,0,0" VerticalAlignment="Top" Width="563"/>

    </Grid>
</Window>
